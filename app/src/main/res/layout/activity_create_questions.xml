<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".StartingActivity"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Questions"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:textSize="30dp"/>

<!--7-->



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/numberOfQuestionsParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/numberOfQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Number Of Questions"
            android:inputType="number"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/saveNumberOfQuestions"
        android:text="Select"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/NumberOfQuestionsFleshScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



<!--    stage 2 -->
<TextView
    android:id="@+id/ShowQuestionNum"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Question 1: "
    android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/QuestionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Question :"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/op1Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter option 1 :"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/op2Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter option 2 :"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/op3Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter option 3 :"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#000"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/op4Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter option 4 :"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Answer"/>
<Spinner
    android:id="@+id/spinnerSolSelector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />








        <Button
            android:id="@+id/submitQunBtn"
            android:text="Select"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
















</androidx.appcompat.widget.LinearLayoutCompat>