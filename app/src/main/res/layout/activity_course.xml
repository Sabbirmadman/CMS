    <TextView
        android:id="@+id/courseIdTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Course ID"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/CourseNameTv"
