                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="📌 Notice"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/noticeBordTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📌 Notice bord " />


            </LinearLayout>

        <LinearLayout
